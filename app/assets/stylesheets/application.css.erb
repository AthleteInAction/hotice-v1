html,body {
	/*background-color: #252525;*/
	background-color: #FFF;
	margin: 0;
	padding: 0;
	height: 100%;
	width: 100%;
	font-family: helvetica,arial;
	color: #CCC;
	font-weight: 300;
}
.header {
	background:#f5f5f5;
	border-bottom: solid 2px #ECBC00;
	min-width: 100%;
	padding-top: 7px;
	padding-bottom: 7px;
}

.footer {
	margin-top: 40px;
	height: 20px;
	/*background: url(<%= asset_path('dark-grey-background-texture.jpg') %>) center center no-repeat;
	border-top: solid 4px #ECBC00;*/
}

.container {
	width: 980px;
	margin-left: auto;
	margin-right: auto;
	padding-left: 20px;
	padding-right: 20px;
}
.splash_main {
	background: url(<%= asset_path('dark-grey-background-texture.jpg') %>) center center no-repeat #2a2a2a;
}
.splash_main .container {
	padding-top: 50px;
	padding-bottom: 50px;
}

h1 {
font-size: 60px;
font-weight: normal;
line-height: 0.5;
color: #fff;
letter-spacing: -1px;
text-shadow: 0 1px 3px #222;
}

h2 {
	font-size: 21px;
font-weight: 300;
line-height: 1.3;
color: #fff;
text-shadow: 0 1px 3px #222;
}

/*.splash_main .container {
	background: url(https://raw.githubusercontent.com/onlyexcellence/hotice/master/Z/IMG/don_cherry.png) bottom left no-repeat;
}*/

.NONE {
	display: none;
}
.LEFT {
	float: left;
}
.RIGHT {
	float: right;
}
.CLEAR {
	clear: both;
}
.HALF {
	width: 50%;
}
.THIRD {
	width: 40%;
}
.TWOTHIRD {
	width: 60%;
}
.BLUE {
	color: #134B94;
}

table {
	border-spacing: 0;
    border-collapse: separate;
}
table.header_table {
	width: 100%;
}