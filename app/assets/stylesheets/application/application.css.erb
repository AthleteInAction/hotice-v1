html,body {
	/*background-color: #252525;*/
	margin: 0;
	padding: 0;
	height: 100%;
	width: 100%;
	font-family: helvetica,arial;
	color: #CCC;
	font-weight: 300;
}

html {
	/*background: url(<%= asset_path('bg.png') %>) top center no-repeat #000;*/
	/*background: #222;*/
	background-image: radial-gradient(circle at center 300px,#4a4a57,#131319 600px);
}

.header {
	padding: 10px 0;
	background: linear-gradient(#313139,#313139);
	box-shadow: rgba(0,0,0,0.2) 0 1px 1px;
	text-align: center;
	margin-bottom: 35px;
	font-weight: 400;
	-webkit-font-smoothing: subpixel-antialiased;
}

.header a {
	display: block;
	float: right;
	text-transform: uppercase;
	font-size: 17px;
	color: #3C3C3C;
	font-weight: bold;
	text-decoration: none;
	text-shadow: 1px 1px 0px #7CB2CA;
	margin-left: 20px;
	letter-spacing: -1px;
}
.header a:hover {
	color: #DDD;
}

