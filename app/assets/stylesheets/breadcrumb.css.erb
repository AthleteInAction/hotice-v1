div.breadcrumb {
	margin-top: -10px;
	margin-bottom: 20px;
	font-size: 14px;
	color: #CCC;
	letter-spacing: 0.5px;
}
div.breadcrumb a {
	color: #ccc;
	text-decoration: none;
	letter-spacing: 0.5px;
}
div.breadcrumb a:hover {
	text-decoration: underline;
}
div.breadcrumb span {
	letter-spacing: 0.5px;
}
div.breadcrumb span:last-child {
	color: #a1a1a1;
	letter-spacing: 0.5px;
}