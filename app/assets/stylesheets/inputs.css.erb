input {
	
}

input[type="text"],input[type="password"] {
	font-family: helvetica,arial;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	font-size: 14px;
	padding: 11px 10px 9px 10px;
	margin-top: -1px;
	border-radius: 3px;
	border: solid 1px #D8D8D8;
	font-weight: normal;
	color: #222;
}

input[type="text"].splash,input[type="password"].splash {
	width: 100%;
	background: #F7F7F7;
	font-family: helvetica,arial;
	font-size: 16px;
	color: #454545;
	padding: 12px 12px 9px 12px;
	margin-bottom: 10px;
	border-radius: 5px;
	border: solid 1px #FFF;
}
input[type="text"].splash:focus,input[type="password"].splash:focus {
	background: #FFF;
	box-shadow: inset 0 1px 2px rgba(0,0,0,0.075),0 0 12px rgba(255,255,255,0.75);
	outline: none;
}