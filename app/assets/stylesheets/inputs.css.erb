div.standard input[type="submit"].button {
	color: #625C5C;
	letter-spacing: 1px;
	font-size: 28px;
	padding: 9px 10px 10px 10px;
	border: 1px solid #50DDE8;
	/*box-shadow: 0 0 10px #50DDE8;*/
}
div.standard input[type="submit"].button:hover {
