html,body {
	/*background-color: #252525;*/
	background-color: #FFF;
	margin: 0;
	padding: 0;
	height: 100%;
	width: 100%;
	font-family: helvetica,arial;
	color: #CCC;
	font-weight: 300;
}

.splash_header {
	background:#50dde8;
	border-bottom: solid 5px #FFAB4D;
	min-width: 100%;
	padding-top: 7px;
	padding-bottom: 7px;
}

.splash_footer {
	margin-top: 40px;
	height: 20px;
	/*background: url(<%= asset_path('dark-grey-background-texture.jpg') %>) center center no-repeat;
	border-top: solid 4px #ECBC00;*/
}

.splash_main {
	background: url(<%= asset_path('bg.png') %>) top center no-repeat #000;
}
.splash_main .container {
	padding-top: 50px;
	padding-bottom: 50px;
}

.splash_form {
	margin-top: 30px;
	margin-left: 20px;
}

.splash_info {
	margin-top: 60px;
}

.splash_info h1 {
	color: #333;
	font-weight: 300;
	line-height: 0;
	font-size: 42px;
	text-shadow: none;
}
.splash_info h2 {
	color: #777;
	font-size: 20px;
	font-weight: 300;
	text-shadow: none;
}

table.info_table {
	width: 100%;
}
table.info_table tr td:first-child {
	width: 50%;
	padding-right: 40px;
	/*background: #090;*/
}
table.info_table tr td:last-child {
	padding-left: 40px;
	/*background: #FC0;*/
}
table.info_table tr td {
	vertical-align: top;
}

p.info_p {
	color: #5a5a5a;
	line-height: 1.5;
	font-size: 14px;
	font-weight: normal;
}

ul.info_list {
	margin-left: 15px;
	padding-left: 0;
}

ul.info_list li {
	margin-top: 20px;
	color: #5a5a5a;
	line-height: 1.5;
	font-size: 14px;
	font-weight: normal;
}

.left_container {
	margin-right: 20px;
}

.splash_form .splash_form_error {
	border-radius: 5px;
	background: #C10202;
	color: #FFF;
	padding: 10px;
	margin-top: 10px;
}
.splash_form .splash_form_error ul {
	margin: 3px 0 0 0;
	padding-left: 20px;
}
.splash_form .splash_form_error ul li {
	color: #FFF;
	text-shadow: 1px 1px 1px #222;
}

.splash_check {
	margin-bottom: 10px;
}
.splash_check label {
	font-size: 14px;
}