div.standard {
	padding: 20px;
	background: #FFF;
	border-bottom-right-radius: 10px;
	border-bottom-left-radius: 10px;
}
div.standard div.sep {
	margin-top: 30px;
}
div.standard div.sep:first-child {
	margin-top: 0px;
}
div.standard div.form_label {
	margin-bottom: 10px;
	color: #FFAB4D;
	text-shadow: 1px 1px 1px #222;
	margin-left: 2px;
}
div.standard div.label {
	margin-bottom: 10px;
}
div.standard div.label a {
	color: #CDCDCD;
	text-decoration: none;
	text-shadow: 1px 1px 1px #222;
}
div.standard div.label a:hover {
	color: #909090;
	text-decoration: none;
}
div.standard div.under {
	margin: 5px 5px 0 5px;
}
div.standard div.under a {
	color: #FF4E4E;
	font-size: 14px;
	text-decoration: none;
	text-shadow: 1px 1px 1px #222;
}
div.standard div.under a:hover {
	color: #DB1B1B;
	text-decoration: none;
}
div.standard div.sub_sep {
	margin-top: 10px;
}


ul.teammates_list {
	width: 100%;
	list-style: none;
	margin: 0;
	padding: 0;
}
ul.teammates_list li {
	padding: 7px;
	background: #c0c0c0;
	color: #4A4A4A;
	text-shadow: 1px 1px 0px #E0E0E0;
}
ul.teammates_list li:nth-child(even){
	background: #c5c5c5;
}
ul.teammates_list li:last-child {
	border-bottom-left-radius: 5px;
	border-bottom-right-radius: 5px;
}

table.inner {
	border-radius: 3px;
	/*border: solid 1px #c0c0c0;*/
	table-layout: fixed;
}
table.inner tr.inner th.inner {
	text-align: left;
	vertical-align: middle;
	background: #D3D3D3;
	padding: 10px;
	color: #7B7B7B;
	font-weight: 300;
	font-size: 30px;
	text-shadow: 1px 1px 1px #F4F4F4;
	font-style: italic;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
	letter-spacing: 1px;
}
table.inner tr.inner th.inner:last-child {
	text-align: right;
}
/*FF7878*/
table.inner tr.inner td.inner {
	text-align: left;
	vertical-align: middle;
	background: #B3B1B1;
	text-shadow: 1px 1px 1px #CBCBCB;
	color: #515151;
	font-size: 20px;
	padding: 12px 10px 10px 10px;
	text-shadow: 1px 1px 1px #DBDBDB;
	border-top: solid 1px #A9A9A9;
}
table.inner tr.inner:last-child td.inner {
	border-bottom-left-radius: 3px;
	border-bottom-right-radius: 3px;
}
table.inner tr.inner td.inner a.remove {
	color: #CF4B4B;
	text-decoration: none;
	font-size: 18px;
	text-shadow: 1px 1px 1px #D2D2D2;
}
table.inner tr.inner td.inner a.remove:hover {
	color: #943434;
}
table.inner tr.inner th.inner input[type="text"] {
	font-size: 14px;
	padding: 10px 8px 7px 8px;
	font-weight: normal;
	letter-spacing: 0.5px;
}
table.inner tr.inner td.inner:last-child {
	text-align: right;
}
table.inner tr.inner:nth-child(2) td.inner {
	border-top: none;
}
table.inner tr.inner:hover td.inner {
	background: #c2c2c2;
}



/*TEAMS*/
table.teams_table {

}
table.teams_table tr td {
	background: #4d4c4c;
	padding: 20px;
	font-size: 20px;
	vertical-align: middle;
	width: 1px;
	text-shadow: 1px 1px 0px #0b0b0b;
	cursor: pointer;
}
table.teams_table tr td:first-child {
	width: inherit;
	padding-left: 20px;
}
table.teams_table tr td:last-child {
	padding-right: 20px;
}
table.teams_table tr:nth-child(even) td {
	background: #424242;
}
table.teams_table tr:last-child td:first-child {
	border-bottom-left-radius: 7px;
}
table.teams_table tr:last-child td:last-child {
	border-bottom-right-radius: 7px;
}
table.teams_table tr td div.mini {
	font-size: 12px;
	margin-top: 4px;
	color: #797979;
}

table.teams_table tr:hover td {
	background: #FFAB4D;
	color: #FFF;
}
table.teams_table tr:hover td div.mini {
	color: #EAEAEA;
}



/*SHOW*/
div.team_container {
	margin: 40px;
}
div.team_container div.name {
	font-size: 60px;
	color: #FFAB4D;
	text-shadow: 2px 2px 2px #222;
}
div.team_container div.record {
	font-size: 30px;
	color: #CCC;
	text-shadow: 2px 2px 2px #222;
	margin-top: 10px;
}
div.team_container div.app_cont {
	margin: 30px 0 0 0;
}


table.invite {
	border-radius: 6px;
	border: solid 1px #DFDFDF;
}
table.invite tr th {
	color: #7B7B7B;
	font-size: 24px;
	font-weight: 300;
	padding: 10px;
	text-align: left;
}
table.invite tr th:last-child {
	text-align: right;
}
table.invite tr td {
	border-top: solid 1px #DFDFDF;
	padding: 10px;
	color: #7E7E7E;
}
table.invite tr:first-child td {
	border-top: none;
}
table.invite tr td:last-child {
	text-align: right;
}
table.invite tr td a {
	color: #F06565;
	text-decoration: none;
}
table.invite tr td a:hover {
	color: #D85555;
}


