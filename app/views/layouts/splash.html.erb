<!DOCTYPE html>
<html>
<head>
  <title>Hotice</title>
  <%= stylesheet_link_tag    'splash/splash', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'splash/splash', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="splash_header">

		<div class="container">
	
			<table class="splash_header_table">
				<tr>
					<td align="left" valign="middle">
	
						<a href="/" class="logo_splash"></a>
	
					</td>
					<td align="right" valign="middle">

						<div class="splash_login">

							<div class="splash_login_form">

								<%= form_tag '/access/normal',method: :post do %>
									
									<%= hidden_field_tag :login,nil,value: 'true' %>

									<% if params[:zendesk] == 'true' %>
										<%= hidden_field_tag :return_to,nil,value: params[:return_to] %>
										<%= hidden_field_tag :zendesk,nil,value: 'true' %>
									<% end %>

									<%= text_field_tag :email,nil,placeholder: "Email" %>
									<%= password_field_tag :password,nil,class: "",placeholder: "Password" %>
									<%= submit_tag "Log In",class: "button" %>
								
								<% end %>

							</div>
							<div class="password_reset"><a href="/access/password/reset">Forgot your password?</a></div>

						</div>
	
					</td>
				</tr>
			</table>
	
		</div>
	
	</div>

	<%= yield %>

	<div class="splash_footer"></div>

</body>
</html>