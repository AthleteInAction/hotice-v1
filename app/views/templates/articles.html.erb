<div class="template_container">

	<div class="breadcrumb">
		<a href="/dashboard/#/">Home</a>
		<span class="arrow">&nbsp;&rsaquo;&nbsp;</span>
		<span class="ORANGE">Articles</span>
	</div>

	<div class="head head-icon-news">
		<div class="head-item head-icon-news">Articles</div>
		<div class="CLEAR"></div>
	</div>
	<div class="body NO_PAD">

		<table class="table">
			<tr ng:if="articles.length == 0 || !articles">
				<td>Loading...</td>
			</tr>
			<tr ng:repeat="article in articles | limitTo:20">
				<td>
					<a href="/dashboard/#/articles/{{article.id}}">{{article.title}}</a>
					<div class="date">
						<span class="pre">Written:&nbsp;</span>
						<span class="aft">{{displayDate(article.updated_at).sDate}}</span>
					</div>
				</td>
			</tr>
		</table>

	</div>

</div>